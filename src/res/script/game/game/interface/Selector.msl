{
	Game.Selector:
	{
		Graphic: { Class: Image.Image, Path: selector/Selector.png	}

		Drawer: Drawer.Composite.Layouter( Size: [87,87] )
		[
			Drawer.StretchedImage( Image:&<Selector>.Graphic )

			Drawer.Composite.If( Condition:"=Widget.Property('Hold') == 1" )
			[
				Drawer.StretchedImage( Image:&<Selector>.Graphic Color:[1 0 0 1] )
			]
		]

		Layouter: Layouter.Drawer(
			Drawer: &<Selector>.Drawer
			)
		[

		]

	}
}
